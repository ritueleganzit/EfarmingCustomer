<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corners_bg"
    android:padding="10dp"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/colorBlack"
        android:layout_gravity="center_horizontal"
        android:text="Details of Vegetables"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:paddingTop="5dp">

        <TableRow android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="50"
                android:ellipsize="end"
                android:singleLine="true"
                android:fontFamily="@font/poppins_regular"
                android:text="Sapling Date"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/job_id"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:ellipsize="end"
                android:gravity="end"
                android:fontFamily="@font/poppins_regular"
                android:singleLine="true"
                android:text="20/04/2019"
                android:textColor="@color/colorBlack" />


        </TableRow>

        <TableRow android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="50"
                android:ellipsize="end"
                android:singleLine="true"
                android:fontFamily="@font/poppins_regular"
                android:text="Deweeding1 Date"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/sender_location"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:gravity="end"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="20/04/2019"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/colorBlack" />


        </TableRow>

        <TableRow android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_regular"
                android:singleLine="true"
                android:text="Deweeding2 Date"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/receiver_location"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:ellipsize="end"
                android:gravity="end"
                android:singleLine="true"
                android:text="20/04/2019"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/colorBlack" />


        </TableRow>

        <TableRow android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="50"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Deweeding3 Date"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/date_placed"
                android:layout_width="0dp"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="20/04/2019"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/colorBlack" />


        </TableRow>

        <TableRow android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="50"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Fertilising1 Date"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/package_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_weight="50"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="20/04/2019"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/colorBlack" />


        </TableRow>
<TableRow android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_regular"
                android:singleLine="true"
                android:text="Fertilising2 Date"
                android:textColor="@color/colorBlack" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="50"
                android:ellipsize="end"
                android:gravity="end"
                android:singleLine="true"
                android:text="20/04/2019"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/colorBlack" />


        </TableRow>

        <TableRow android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="50"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Fertilising3 Date"
                android:textColor="@color/colorBlack" />

            <TextView
                android:layout_width="0dp"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="20/04/2019"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/colorBlack" />


        </TableRow>

        <TableRow android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="50"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Harvesting Date"
                android:textColor="@color/colorBlack" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_weight="50"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="20/04/2019"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/colorBlack" />


        </TableRow>

    </TableLayout>


</LinearLayout>