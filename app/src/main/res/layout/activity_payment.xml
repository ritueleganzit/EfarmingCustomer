<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:elevation="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:theme="@style/CustomActionBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="3dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_back_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/back"
                android:fontFamily="@font/poppins_medium"
                android:text="Delivery Summary"
                android:id="@+id/titlemanagefarm"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#ffffff" />


        </RelativeLayout>


    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_below="@+id/toolbar"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        >
        <TextView
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
android:fontFamily="@font/poppins_regular"
            android:text="We will be delivering the yields as per the address provided in the profile. Our executive will connect with you shortly."/>
        <TextView
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Lorem Ipsum"
            android:layout_marginTop="10dp"
            android:textStyle="bold"


            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

        <TextView
            android:textColor="@color/secondaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"

            android:text="935 Ridgewood St. Piscataway"/>
        <TextView
            android:textColor="@color/secondaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"

            android:text="lorem@gmail.com"/><TextView
            android:textColor="@color/secondaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"

            android:text="+20 90909090"/>

        <TextView
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Payment Details"
            android:layout_marginTop="10dp"
            android:textStyle="bold"


            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

        <TextView
            android:textColor="@color/secondaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"

            android:text="@string/dummytext"/>
        <TextView
        android:textColor="#F44336"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:text="*Your Monthly Subscription includes"

        android:fontFamily="@font/poppins_regular"

        />
        <TextView
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Plot Rent"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_check"
            android:textSize="12sp"

            />
 <TextView
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Cost of Sapling and seeds"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_check"
     android:textSize="12sp"

            /> <TextView
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Maintenance Cost(watering, deweeding, manuring etc..)"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_check"
android:textSize="12sp"

            />

        <TextView
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Organic Fertilizers Cost"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_check"
            android:textSize="12sp"

            />
<TextView
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Profit to Farmer"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_check"
    android:textSize="12sp"

            />
<TextView
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Harvesting support"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_check"
    android:textSize="12sp"

            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            />
<TextView
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Home Delivery Cost"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_check"
    android:textSize="12sp"

            />
<TextView
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Any other additional expense"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_check"
    android:textSize="12sp"

            />

        <CheckBox
            android:layout_marginTop="10dp"

            android:layout_width="match_parent"
            android:textColor="@color/secondaryText"
        android:text="I agree the above policies"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MAKE PAYMENT"
            android:textColor="#ffffff"
            android:background="@drawable/gradient_btn_bg"
            android:layout_margin="25dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:fontFamily="@font/poppins_medium"/>


    </LinearLayout>
    </ScrollView>
</RelativeLayout>